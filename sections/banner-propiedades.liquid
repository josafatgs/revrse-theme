{% schema %}
{
  "name": "Hero Búsqueda Propiedades",
  "class": "section-hero-search",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Fondo"
    },
    {
      "type": "range",
      "id": "overlay_intensity",
      "min": 0,
      "max": 90,
      "step": 5,
      "label": "Oscuridad overlay (%)",
      "default": 40,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Texto"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título H1",
      "default": "Encuentra tu propiedad ideal"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Casas, departamentos, terrenos y locales en Puebla y toda la región."
    },
    {
      "type": "header",
      "content": "Destino"
    },
    {
      "type": "url",
      "id": "form_action",
      "label": "Colección destino",
      "info": "/collections/todos-los-inmuebles",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Venta/Renta"
    },
    {
      "type": "text",
      "id": "param_venta",
      "label": "Parámetro URL",
      "default": "venta"
    },
    {
      "type": "text",
      "id": "label_venta_default",
      "label": "Label por defecto",
      "default": "Venta/Renta"
    },
    {
      "type": "text",
      "id": "option_venta_1_label",
      "label": "Opción 1",
      "default": "Venta"
    },
    {
      "type": "text",
      "id": "option_venta_1_value",
      "label": "Valor 1 (tag)",
      "default": "venta"
    },
    {
      "type": "text",
      "id": "option_venta_2_label",
      "label": "Opción 2",
      "default": "Renta"
    },
    {
      "type": "text",
      "id": "option_venta_2_value",
      "label": "Valor 2 (tag)",
      "default": "renta"
    },
    {
      "type": "header",
      "content": "Tipo Propiedad"
    },
    {
      "type": "text",
      "id": "param_tipo",
      "label": "Parámetro URL",
      "default": "tipo"
    },
    {
      "type": "text",
      "id": "label_tipo_default",
      "label": "Label por defecto",
      "default": "Tipo"
    },
    {
      "type": "text",
      "id": "option_tipo_1_label",
      "label": "Tipo 1",
      "default": "Casa"
    },
    {
      "type": "text",
      "id": "option_tipo_1_value",
      "label": "Valor 1 (tag)",
      "default": "casa"
    },
    {
      "type": "text",
      "id": "option_tipo_2_label",
      "label": "Tipo 2",
      "default": "Depto"
    },
    {
      "type": "text",
      "id": "option_tipo_2_value",
      "label": "Valor 2 (tag)",
      "default": "depto"
    },
    {
      "type": "text",
      "id": "option_tipo_3_label",
      "label": "Tipo 3",
      "default": "Terreno"
    },
    {
      "type": "text",
      "id": "option_tipo_3_value",
      "label": "Valor 3 (tag)",
      "default": "terreno"
    },
    {
      "type": "header",
      "content": "Búsqueda"
    },
    {
      "type": "text",
      "id": "placeholder_busqueda",
      "label": "Placeholder input",
      "default": "Casa en Puebla, terreno renta..."
    },
    {
      "type": "header",
      "content": "Botón"
    },
    {
      "type": "text",
      "id": "boton_texto",
      "label": "Texto botón",
      "default": "Buscar"
    },
    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color",
      "id": "search_text_color",
      "label": "Texto selects/input",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "search_placeholder_color",
      "label": "Placeholder input",
      "default": "#888888"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Fondo botón",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Texto botón",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Responsivo"
    },
    {
      "type": "range",
      "id": "altura_desktop",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Altura desktop",
      "default": 75
    },
    {
      "type": "range",
      "id": "altura_mobile",
      "min": 50,
      "max": 90,
      "step": 5,
      "unit": "vh",
      "label": "Altura móvil",
      "default": 70
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 28,
      "max": 64,
      "step": 2,
      "unit": "px",
      "label": "Título desktop",
      "default": 48
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 24,
      "max": 44,
      "step": 2,
      "unit": "px",
      "label": "Título móvil",
      "default": 36
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Subtítulo desktop",
      "default": 18
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "min": 14,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Subtítulo móvil",
      "default": 16
    }
  ],
  "presets": [{
    "name": "Hero Búsqueda Propiedades"
  }]
}
{% endschema %}


