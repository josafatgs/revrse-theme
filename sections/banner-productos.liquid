{% comment %}
  Sección: Banner izquierda + slider productos - Optimizada móvil
{% endcomment %}

<section class="banner-products-wrapper-{{ section.id }} section-{{ section.id }}">
  <div class="bp-container">
    <!-- BANNER IZQUIERDO -->
    <div class="bp-banner">
      {% if section.settings.banner_link != blank %}
        <a href="{{ section.settings.banner_link }}">
      {% endif %}
      {% if section.settings.banner_image != blank %}
        <img
          src="{{ section.settings.banner_image | image_url: width: 2000 }}"
          alt="{{ section.settings.banner_heading | escape }}"
          class="bp-banner-img"
          loading="lazy">
      {% endif %}
      {% if section.settings.banner_link != blank %}
        </a>
      {% endif %}
      {% if section.settings.banner_heading != blank or section.settings.banner_text != blank %}
        <div class="bp-banner-content">
          {% if section.settings.banner_heading != blank %}
            <h2>{{ section.settings.banner_heading }}</h2>
          {% endif %}
          {% if section.settings.banner_text != blank %}
            <p>{{ section.settings.banner_text }}</p>
          {% endif %}
          {% if section.settings.banner_link != blank %}
            <a href="{{ section.settings.banner_link }}">Ver más</a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <!-- PRODUCTOS DERECHA -->
    <div class="bp-products">
      <div class="bp-slider" id="bp-slider-{{ section.id }}">
        <div class="bp-track">
          {% for block in section.blocks %}
            {% assign prod = all_products[block.settings.product] %}
            {% if prod %}
              <article class="bp-item {% if block.shopify_attributes %}shopify-{{ block.shopify_attributes }}{% endif %}" {{ block.shopify_attributes }}>
                <div class="bp-card">
                  <a href="{{ prod.url }}">
                    <div class="bp-item-image" data-images="{{ prod.images | map: 'src' | join: ',' }}">
                      {% if prod.featured_image %}
                        <img
                          src="{{ prod.featured_image | image_url: width: 800 }}"
                          alt="{{ prod.title | escape }}"
                          loading="lazy">
                        {% if prod.images.size > 1 %}
                          {% for image in prod.images limit: 4 %}
                            {% unless forloop.first %}
                              <img
                                src="{{ image | image_url: width: 800 }}"
                                alt="{{ prod.title | escape }}"
                                loading="lazy"
                                style="display: none;">
                            {% endunless %}
                          {% endfor %}
                        {% endif %}
                      {% endif %}
                    </div>
                  </a>
                  <div class="bp-card-footer">
                    <!-- Botón título -->
                    <a href="{{ prod.url }}" class="bp-card-button bp-card-button-main">
                      <span class="bp-card-title">{{ prod.title | truncate: section.settings.title_characters }}</span>
                    </a>
                    <!-- Botón precio -->
                    <a href="{{ prod.url }}" class="bp-card-button bp-card-button-price">
                      <span class="bp-card-price">{{ prod.price | money }}</span>
                    </a>
                    <!-- Botón estado por bloque -->
                    {% if block.settings.state_label != blank %}
                      <span class="bp-card-button bp-card-button-state">
                        {{ block.settings.state_label }}
                      </span>
                    {% endif %}
                  </div>
                </div>
              </article>
            {% endif %}
          {% endfor %}
        </div>
        <button type="button" class="bp-prev" aria-label="Anterior">‹</button>
        <button type="button" class="bp-next" aria-label="Siguiente">›</button>
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = '{{ section.id }}';
  const slider = document.getElementById('bp-slider-' + sectionId);
  if (!slider) return;

  const track = slider.querySelector('.bp-track');
  const items = slider.querySelectorAll('.bp-item');
  const prev = slider.querySelector('.bp-prev');
  const next = slider.querySelector('.bp-next');

  if (items.length === 0) return;

  let currentIndex = 0;
  let visible = 3; // Default desktop

  function updateVisible() {
    if (window.innerWidth < 480) visible = 1;
    else if (window.innerWidth < 768) visible = 2;
    else visible = 3;
  }

  function updateSlider() {
    const maxIndex = Math.max(0, items.length - visible);
    if (currentIndex > maxIndex) currentIndex = maxIndex;
    const translateX = -100 * currentIndex / visible;
    track.style.transform = `translateX(${translateX}%)`;
  }

  // Touch swipe
  let startX = 0;
  track.addEventListener('touchstart', e => startX = e.touches[0].clientX);
  track.addEventListener('touchend', e => {
    const endX = e.changedTouches[0].clientX;
    if (startX - endX > 50) next.click(); // Swipe left
    if (endX - startX > 50) prev.click(); // Swipe right
  });

  prev.addEventListener('click', () => {
    currentIndex = Math.max(0, currentIndex - 1);
    updateSlider();
  });

  next.addEventListener('click', () => {
    const maxIndex = Math.max(0, items.length - visible);
    currentIndex = Math.min(maxIndex, currentIndex + 1);
    updateSlider();
  });

  window.addEventListener('resize', () => {
    updateVisible();
    updateSlider();
  });

  updateVisible();
  updateSlider();

  // Auto-rotate images cada 3s
  const imageWrappers = slider.querySelectorAll('.bp-item-image');
  setInterval(() => {
    imageWrappers.forEach(wrapper => {
      const imgs = wrapper.querySelectorAll('img');
      const current = wrapper.querySelector('img:not([style*="display: none"])');
      const nextImg = current ? current.nextElementSibling : imgs[0];
      if (nextImg) {
        Array.from(imgs).forEach(img => img.style.display = 'none');
        nextImg.style.display = 'block';
      }
    });
  }, 3000);
});
</script>

<style>
  /* Estilos desktop originales (abreviados por espacio) */
  .banner-products-wrapper-{{ section.id }} {
    padding: 70px 0;
  }
  .bp-container {
    display: grid;
    grid-template-columns: 1.7fr 1.3fr;
    gap: 32px;
    align-items: stretch;
  }
  /* ... resto desktop igual [file:16] ... */

  /* OPTIMIZACIONES MÓVIL */
  @media (max-width: 989px) {
    .banner-products-wrapper-{{ section.id }} {
      padding: 40px 16px;
    }
    .bp-container {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    .bp-banner-img {
      min-height: 280px;
    }
    .bp-item {
      flex: 0 0 50%; /* 2 items tablet */
    }
  }

  @media (max-width: 768px) {
    .bp-banner-content {
      padding: 24px;
    }
    .bp-banner-content h2 {
      font-size: 28px;
    }
  }

  @media (max-width: 480px) {
    .banner-products-wrapper-{{ section.id }} {
      padding: 30px 12px;
    }
    .bp-item {
      flex: 0 0 100%; /* 1 item móvil */
    }
    .bp-item-image {
      height: 240px; /* Más alto para touch */
    }
    .bp-card-title {
      font-size: 16px !important; /* Mínimo legible */
    }
    .bp-card-price {
      font-size: 18px !important;
    }
    .bp-prev, .bp-next {
      width: 44px;
      height: 44px; /* Touch target 44px+ */
      font-size: 20px;
      top: 40%;
    }
  }

  /* Touch improvements */
  .bp-track {
    touch-action: pan-y; /* Evita scroll horizontal accidental */
  }
  .bp-prev, .bp-next {
    transition: all 0.3s ease;
  }
  .bp-prev:hover, .bp-next:hover {
    transform: scale(1.1);
  }
</style>

