    }
  ],
  "max_blocks": 12,
  "presets": [{
    "name": "Banner productos deslizables",
    "category": "Productos",
    "blocks": [
      {"type": "product"},
      {"type": "product"},
      {"type": "product"}
    ]
  }]
}
{% endschema %}
