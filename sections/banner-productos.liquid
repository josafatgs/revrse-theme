{% comment %}
  Sección: Banner izquierda + slider productos derecha (3 productos visibles)
  + Ocultar en móvil (<= 749px)
{% endcomment %}

<section class="banner-products-wrapper-{{ section.id }}">
  <div class="bp-container">
    <!-- BANNER IZQUIERDO -->
    <div class="bp-banner">
      {% if section.settings.banner_link != blank %}
        <a href="{{ section.settings.banner_link }}">
      {% endif %}
        {% if section.settings.banner_image != blank %}
          <img
            src="{{ section.settings.banner_image | image_url: width: 2000 }}"
            alt="{{ section.settings.banner_heading | escape }}"
            class="bp-banner-img"
          >
        {% endif %}
        <div class="bp-banner-content">
          {% if section.settings.banner_heading != blank %}
            <h2>{{ section.settings.banner_heading }}</h2>
          {% endif %}
          {% if section.settings.banner_text != blank %}
            <p>{{ section.settings.banner_text }}</p>
          {% endif %}
        </div>
      {% if section.settings.banner_link != blank %}
        </a>
      {% endif %}
    </div>

    <!-- PRODUCTOS DERECHA -->
    <div class="bp-products">
      <div class="bp-slider" id="bp-slider-{{ section.id }}">
        <div class="bp-track">
          {% for block in section.blocks %}
            {% assign prod = all_products[block.settings.product] %}
            {% if prod %}
              <article class="bp-item" {{ block.shopify_attributes }}>
                <div class="bp-card">
                  <a href="{{ prod.url }}">
                    <div
                      class="bp-item-image"
                      data-images="{{ prod.featured_image | image_url: width: 800 }}{% if prod.images.size > 1 %}|{{ prod.images[1] | image_url: width: 800 }}{% endif %}"
                    >
                      <img
                        src="{{ prod.featured_image | image_url: width: 800 }}"
                        alt="{{ prod.title | escape }}"
                      >
                    </div>
                  </a>

                  <div class="bp-card-footer">
                    <!-- Botón título -->
                    <a href="{{ prod.url }}" class="bp-card-button bp-card-button-main">
                      <span class="bp-card-title">
                        {{ prod.title | truncate: section.settings.title_characters }}
                      </span>
                    </a>

                    <!-- Botón precio -->
                    <a href="{{ prod.url }}" class="bp-card-button bp-card-button-price">
                      <span class="bp-card-price">{{ prod.price | money }}</span>
                    </a>

                    <!-- Botón estado por bloque -->
                    {% if block.settings.state_label != blank %}
                      <span class="bp-card-button bp-card-button-state">
                        {{ block.settings.state_label }}
                      </span>
                    {% endif %}
                  </div>
                </div>
              </article>
            {% endif %}
          {% endfor %}
        </div>

        <button type="button" class="bp-prev" aria-label="Anterior">‹</button>
        <button type="button" class="bp-next" aria-label="Siguiente">›</button>
      </div>
    </div>
  </div>
</section>

<style>
  .banner-products-wrapper-{{ section.id }} {
    padding: 70px 0;
    overflow-x: hidden;
  }
  .banner-products-wrapper-{{ section.id }} .bp-container {
    display: grid;
    grid-template-columns: 1.7fr 1.3fr; /* banner más grande */
    gap: 32px;
    align-items: stretch;
  }

  /* BANNER */
  .banner-products-wrapper-{{ section.id }} .bp-banner {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
  }
  .banner-products-wrapper-{{ section.id }} .bp-banner-img {
    width: 100%;
    height: 100%;
    min-height: 420px; /* banner más alto */
    object-fit: cover;
    display: block;
  }
  .banner-products-wrapper-{{ section.id }} .bp-banner-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 36px;
    color: #ffffff;
    background: linear-gradient(to top, rgba(0,0,0,0.55), transparent);
  }
  .banner-products-wrapper-{{ section.id }} .bp-banner-content h2 {
    margin: 0 0 12px 0;
    font-size: 34px;
  }

  /* SLIDER PRODUCTOS */
  .banner-products-wrapper-{{ section.id }} .bp-products {
    position: relative;
  }
  .banner-products-wrapper-{{ section.id }} .bp-slider {
    position: relative;
    overflow: hidden;
  }
  .banner-products-wrapper-{{ section.id }} .bp-track {
    display: flex;
    align-items: stretch;
    transition: transform 0.4s ease;
    gap: 12px;
  }
  .banner-products-wrapper-{{ section.id }} .bp-item {
    flex: 0 0 33.333%; /* 3 productos visibles */
    padding: 0 8px;
    box-sizing: border-box;
  }
  .banner-products-wrapper-{{ section.id }} .bp-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    min-height: 360px;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.06);
  }
  .banner-products-wrapper-{{ section.id }} .bp-item-image {
    width: 100%;
    height: 220px;
    overflow: hidden;
  }
  .banner-products-wrapper-{{ section.id }} .bp-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .banner-products-wrapper-{{ section.id }} .bp-card-footer {
    margin-top: auto;
    display: flex;
    flex-direction: column;
  }
  .banner-products-wrapper-{{ section.id }} .bp-card-button,
  .banner-products-wrapper-{{ section.id }} .bp-card-button-state {
    width: 100%;
    box-sizing: border-box;
    padding: 10px 12px;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }
  .banner-products-wrapper-{{ section.id }} .bp-card-footer .bp-card-button-state {
    border-top: 1px solid rgba(0,0,0,0.05);
  }
  .banner-products-wrapper-{{ section.id }} .bp-card-button-main {
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.title_font_size }}px;
    text-align: center;
  }
  .banner-products-wrapper-{{ section.id }} .bp-card-button-main:hover {
    filter: brightness(0.9);
  }
  .banner-products-wrapper-{{ section.id }} .bp-card-button-price {
    background: {{ section.settings.price_button_bg }};
    color: {{ section.settings.price_text_color }};
  }

  .bp-prev, .bp-next {
    position: absolute;
    top: 45%;
    transform: translateY(-50%);
    width: 32px;
    height: 32px;
    background: rgba(255,255,255,0.9);
    border: none;
    border-radius: 50%;
    font-size: 20px;
    cursor: pointer;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    transition: all 0.2s ease;
  }
  .bp-prev { left: 8px; }
  .bp-next { right: 8px; }

  .bp-prev:hover, .bp-next:hover {
    background: white;
    transform: translateY(-50%) scale(1.1);
  }

  /* RESPONSIVE - MEJORADO PARA MÓVIL */
  @media (max-width: 989px) {
    .banner-products-wrapper-{{ section.id }} .bp-container {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-products {
      order: -1;
    }
  }

  @media (max-width: 767px) {
    .banner-products-wrapper-{{ section.id }} {
      padding: 40px 0;
    }
    .banner-products-wrapper-{{ section.id }} .bp-container {
      padding: 0 12px;
      gap: 20px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-banner-img {
      min-height: 250px !important;
    }
    .banner-products-wrapper-{{ section.id }} .bp-banner-content {
      padding: 24px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-banner-content h2 {
      font-size: 24px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-slider {
      height: auto;
      max-height: 420px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-track {
      gap: 8px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-item {
      flex: 0 0 50%; /* 2 en tablet */
    }
    .bp-prev, .bp-next {
      width: 36px !important;
      height: 36px !important;
      opacity: 0.9;
    }
  }

  @media (max-width: 600px) {
    .banner-products-wrapper-{{ section.id }} .bp-item {
      flex: 0 0 100%; /* 1 en móvil */
      padding: 0 4px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-card {
      min-height: 340px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-item-image {
      height: 180px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-banner-content {
      padding: 20px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-banner-content h2 {
      font-size: 20px;
    }
  }

  @media (max-width: 480px) {
    .banner-products-wrapper-{{ section.id }} .bp-card {
      min-height: 320px;
    }
    .banner-products-wrapper-{{ section.id }} .bp-item-image {
      height: 160px;
    }
  }

  /* OCULTAR EN MÓVIL (visible en web/desktop) */
  @media screen and (max-width: 749px) {
    .banner-products-wrapper-{{ section.id }},
    #shopify-section-{{ section.id }} {
      display: none !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sliderId = 'bp-slider-{{ section.id }}';
    const track = document.querySelector(`#${sliderId} .bp-track`);
    const prevBtn = document.querySelector(`#${sliderId} .bp-prev`);
    const nextBtn = document.querySelector(`#${sliderId} .bp-next`);

    if (!track || !prevBtn || !nextBtn) return;

    const items = track.querySelectorAll('.bp-item');
    if (!items.length) return;

    let currentIndex = 0;
    let visibleItems = 3;

    function updateVisibles() {
      const width = window.innerWidth;
      if (width < 600) visibleItems = 1;
      else if (width < 989) visibleItems = 2;
      else visibleItems = 3;
    }

    function updateSlider() {
      const itemWidth = items[0].offsetWidth + 24; // aproximación (ancho + separación)
      const offset = -currentIndex * itemWidth;
      track.style.transform = `translateX(${offset}px)`;

      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= items.length - visibleItems;
    }

    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateSlider();
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentIndex < items.length - visibleItems) {
        currentIndex++;
        updateSlider();
      }
    });

    updateVisibles();
    updateSlider();

    window.addEventListener('resize', () => {
      setTimeout(() => {
        updateVisibles();
        currentIndex = Math.min(currentIndex, items.length - visibleItems);
        updateSlider();
      }, 250);
    });
  });
</script>

{% schema %}
{
  "name": "Banner + Productos Desl",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Imagen del banner"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Título del banner",
      "default": "Ofertas especiales"
    },
    {
      "type": "textarea",
      "id": "banner_text",
      "label": "Texto del banner"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Link del banner"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Fondo botón principal",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Texto botón principal",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "price_button_bg",
      "label": "Fondo botón precio",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "price_text_color",
      "label": "Texto botón precio",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Tamaño fuente título",
      "default": 14
    },
    {
      "type": "range",
      "id": "title_characters",
      "min": 20,
      "max": 60,
      "step": 1,
      "label": "Caracteres máximo título",
      "default": 35
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Producto",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Seleccionar producto"
        },
        {
          "type": "text",
          "id": "state_label",
          "label": "Etiqueta estado (ej: 'Nuevo')",
          "default": "En stock"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner + Productos Deslizables",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}
