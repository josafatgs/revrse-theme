{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer 
  class="footer full-width" 
  role="contentinfo"
  style="
    background-color: {{ section.settings.footer_bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    color: {{ section.settings.text_color }};
    --footer-primary-color: {{ section.settings.primary_color }};
    --footer-text-size: {{ section.settings.text_size }}px;
    --footer-heading-size: {{ section.settings.heading_size }}px;
    --footer-text-weight: {{ section.settings.text_weight }};
    --footer-heading-weight: {{ section.settings.heading_weight }};
  "
>
  <div class="footer__container">
    <!-- Main Footer Content -->
    <div class="footer__main">
      <!-- Company Info Column -->
      <div class="footer__column footer__column--company">
        {% render 'footer-company', 
           section: section, 
           shop: shop 
        %}
      </div>

      <!-- Dynamic Menu Columns -->
      {% assign menu_count = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'menu_column' %}
          {% assign menu_count = menu_count | plus: 1 %}
          {% if menu_count <= 3 %}
            <div class="footer__column footer__column--menu" {{ block.shopify_attributes }}>
              {% render 'footer-menu-column', 
                 block: block,
                 text_color: section.settings.text_color,
                 link_color: section.settings.link_color,
                 link_hover_color: section.settings.link_hover_color
              %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}

      <!-- Contact Info Column -->
      <div class="footer__column footer__column--contact">
        {% render 'footer-contact', 
           section: section 
        %}
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom" style="border-color: {{ section.settings.border_color }};">
      <div class="footer__bottom-content">
        {% render 'footer-bottom', 
           section: section, 
           shop: shop 
        %}
      </div>
    </div>
  </div>
</footer>

