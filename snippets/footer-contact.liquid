<!-- Contact Information -->
<h4 class="footer__column-title">{{ section.settings.contact_title }}</h4>

<div class="footer__contact-info">
  {% if section.settings.address != blank %}
    <div class="footer__contact-item">
      <div class="footer__contact-icon">
        {% render 'svg', icon: 'map-pin' %}
      </div>
      <span class="footer__contact-text">{{ section.settings.address }}</span>
    </div>
  {% endif %}
  
  {% if section.settings.phone_number != blank %}
    <div class="footer__contact-item">
      <div class="footer__contact-icon">
        {% render 'svg', icon: 'phone' %}
      </div>
      <a href="tel:{{ section.settings.phone_number }}" class="footer__contact-link">
        {{ section.settings.phone_number }}
      </a>
    </div>
  {% endif %}
  
  {% if section.settings.email != blank %}
    <div class="footer__contact-item">
      <div class="footer__contact-icon">
        {% render 'svg', icon: 'mail' %}
      </div>
      <a href="mailto:{{ section.settings.email }}" class="footer__contact-link">
        {{ section.settings.email }}
      </a>
    </div>
  {% endif %}
  
  {% if section.settings.business_hours != blank %}
    <div class="footer__contact-item">
      <div class="footer__contact-icon">
        {% render 'svg', icon: 'clock' %}
      </div>
      <span class="footer__contact-text">{{ section.settings.business_hours }}</span>
    </div>
  {% endif %}
</div>

<!-- WhatsApp Contact Button -->
{% if section.settings.whatsapp_number != blank %}
  <a href="https://wa.me/{{ section.settings.whatsapp_number }}?text={{ section.settings.whatsapp_message | url_encode }}" 
     target="_blank" 
     rel="noopener noreferrer"
     class="footer__whatsapp-btn">
    {% render 'svg', icon: 'whatsapp' %}
    <span>{{ section.settings.whatsapp_button_text }}</span>
  </a>
{% endif %}